### Variables
set $mod Mod4
set $term kitty
set $menu wofi --show drun --allow-images

### Output
output * bg ~/.config/wallpapers/mountain.jpg fill

### Font
font Berkeley Mono 11

### Colors (Catppuccin Mocha)
# https://github.com/catppuccin/i3
set $rosewater #f5e0dc
set $flamingo  #f2cdcd
set $pink      #f5c2e7
set $mauve     #cba6f7
set $red       #f38ba8
set $maroon    #eba0ac
set $peach     #fab387
set $yellow    #f9e2af
set $green     #a6e3a1
set $teal      #94e2d5
set $sky       #89dceb
set $sapphire  #74c7ec
set $blue      #89b4fa
set $lavender  #b4befe
set $text      #cdd6f4
set $subtext0  #a6adc8
set $base      #1e1e2e
set $mantle    #181825
set $crust     #11111b
set $surface0 #313244
set $surface1 #45475a
set $surface2 #585b70

### Window colors
client.focused          $mauve     $mauve     $base    $mauve   $mauve
client.focused_inactive $blue      $surface0  $text    $surface0 $surface0
client.unfocused        $surface1  $surface0  $subtext0 $surface0 $surface0
client.urgent           $red       $red       $base    $red     $red
client.placeholder      $surface1  $surface0  $subtext0 $surface0 $surface0
client.background       $base

# Only show borders when there is more than one window
smart_borders on

### Keybindings
# Terminal
bindsym $mod+Return exec $term

# App launcher
bindsym $mod+d exec $menu

# Close windows
bindsym $mod+Shift+q kill

# Reload config file
bindsym $mod+Shift+r reload

# Restart sway process
bindsym $mod+Ctrl+r restart

# Quit/restart
bindsym $mod+Shift+e exec "swaymsg exit"

# Lock manually
bindsym $mod+Shift+z exec swaylock -f

# Don't follow mouse
focus_follows_mouse no

# Window focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Window movement
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

# Brightness keys
bindsym XF86MonBrightnessUp exec ~/.config/sway/scripts/brightness-notify.sh +10%
bindsym XF86MonBrightnessDown exec ~/.config/sway/scripts/brightness-notify.sh 10%-

# Volume keys
bindsym XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume-notify.sh 5%+
bindsym XF86AudioLowerVolume exec ~/.config/sway/scripts/volume-notify.sh 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle

# Touchpad
input "type:touchpad" {
    tap enabled        yes        # enable tap-to-click
    natural_scroll     enabled    # natural scrolling (like macOS)
    scroll_method      two_finger # two-finger scrolling
    middle_emulation   enabled    # optional: three-finger tap for middle click
}

### Bar
bar {
    swaybar_command waybar
}

# Autostart
exec mako
